                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis ShowLabels="False"/>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>

                    <lvc:CartesianChart Grid.Column="1" Grid.Row="5" MinHeight="30" DataTooltip="{x:Null}">
                        <lvc:CartesianChart.Series>
                            <lvc:LineSeries Fill="Transparent" PointGeometrySize="0" StrokeThickness="0.5" Margin="0"
                                            Values="1,4,3,2,4,5,7,8,5,4,3,2,4,6,7,8,9,6,5,4,4,5,7,8,5,4,3,2,4,6,7,8,9,6,5,4,1,4,3,2,4,5,7,8,5,4,3,2,4,6,7,8,9,6,5,4,1,4,3,2,4,5,7,8,5,4,3,2,4,6,7,8,9,6,5,4">
                                <lvc:LineSeries.Stroke>
                                    <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                        <GradientStop Color="Orange" Offset="0.5"/>
                                        <GradientStop Color="#00FFFFFF" Offset="0"/>
                                        <GradientStop Color="#FFFFE2AE" Offset="0.1"/>
                                    </LinearGradientBrush>
                                </lvc:LineSeries.Stroke>
                            </lvc:LineSeries>
                        </lvc:CartesianChart.Series>
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis ShowLabels="False"/>
                        </lvc:CartesianChart.AxisX>
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis ShowLabels="False"/>
                        </lvc:CartesianChart.AxisY>
                    </lvc:CartesianChart>

                    <TextBlock Text="5 " Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#99FFFFFF"/>
                    <TextBlock Text="m" Grid.Column="3" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#99FFFFFF"/>
                    <TextBlock Text="50 " Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#99FFFFFF"/>
                    <TextBlock Text="Mpa" Grid.Column="3" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#99FFFFFF"/>
                    <TextBlock Text="50 " Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#99FFFFFF"/>
                    <TextBlock Text="℃" Grid.Column="3" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#99FFFFFF"/>
                    <TextBlock Text="50 " Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#99FFFFFF"/>
                    <TextBlock Text="Mpa" Grid.Column="3" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#99FFFFFF"/>
                    <TextBlock Text="50 " Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#99FFFFFF"/>
                    <TextBlock Text="℃" Grid.Column="3" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#99FFFFFF"/>
                    <TextBlock Text="50 " Grid.Column="2" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#99FFFFFF"/>
                    <TextBlock Text="Mpa" Grid.Column="3" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#99FFFFFF"/>
                </Grid>
                
                <ItemsControl Grid.Row="1" ItemsSource="{Binding PageModel.DeviceModel.MonitorValueList}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="25"/>
                                    <ColumnDefinition Width="30"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding ValueName,StringFormat=\{0\}：}" VerticalAlignment="Center" Foreground="#99FFFFFF"/>

                                <lvc:CartesianChart Grid.Column="1" MinHeight="30" DataTooltip="{x:Null}">
                                    <lvc:CartesianChart.Series>
                                        <lvc:LineSeries Fill="Transparent" PointGeometrySize="0" StrokeThickness="0.5" Values="{Binding Values}">
                                            <lvc:LineSeries.Stroke>
                                                <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                                    <GradientStop Color="Orange" Offset="0.5"/>
                                                    <GradientStop Color="#00FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#FFFFE2AE" Offset="0.1"/>
                                                </LinearGradientBrush>
                                            </lvc:LineSeries.Stroke>
                                        </lvc:LineSeries>
                                    </lvc:CartesianChart.Series>
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis ShowLabels="False"/>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis ShowLabels="False"/>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>

                                <TextBlock Text="{Binding CurrentValue}" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="#99FFFFFF"/>
                                <TextBlock Text="{Binding Unit}" Grid.Column="3" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#99FFFFFF" Margin="3,0,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Border BorderBrush="#33FFFFFF" BorderThickness="0,0.5,0,0" Grid.Row="2" VerticalAlignment="Top"/>
                <Grid Grid.Row="2" Height="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="实时状态:" VerticalAlignment="Center" Foreground="#99FFFFFF"/>
                    <ToggleButton Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                                  IsChecked="{Binding PageModel.DeviceModel.IsRunning}"
                                  Template="{StaticResource StateButtonTemplate}" Margin="15,0,0,0"/>
                    <ToggleButton Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                  IsChecked="{Binding PageModel.DeviceModel.IsWarning}" IsEnabled="False"
                                  Template="{StaticResource WarningButtonTemplate}"/>
                </Grid>
                <ItemsControl ItemsSource="{Binding PageModel.DeviceModel.WarningMessage}" Grid.Row="3">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Message}" Foreground="#CCFF4400" TextWrapping="Wrap" LineHeight="22">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="White" ShadowDepth="0" Direction="0" Opacity="0.7" BlurRadius="1"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </Grid>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="系统总览" Foreground="White" FontSize="16" HorizontalAlignment="Right" Margin="0,0,20,0"/>
                <UniformGrid Columns="3" Margin="0,40,0,0">
                    <StackPanel>
                        <TextBlock Text="监控值" HorizontalAlignment="Center" Foreground="#99FFFFFF"/>
                        <control:CircularProgressBar Value="{Binding PageModel.GlobalMonitorValue1}" Width="60" Height="90" BackColor="#EEE" ForeColor="#20c9b4"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="监控值" HorizontalAlignment="Center" Foreground="#99FFFFFF"/>
                        <control:CircularProgressBar Value="{Binding PageModel.GlobalMonitorValue2}" Width="60" Height="90" BackColor="#EEE" ForeColor="Orange"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="监控值" HorizontalAlignment="Center"  Foreground="#99FFFFFF"/>
                        <control:CircularProgressBar Value="{Binding PageModel.GlobalMonitorValue3}" Width="60" Height="90" BackColor="#EEE" ForeColor="#38baec"/>
                    </StackPanel>
                </UniformGrid>

                <TextBlock Text="实时日志" Foreground="#44FFFFFF" Grid.Row="2" Margin="5,10"/>
                <TextBlock Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5" FontSize="11">
                    <Hyperlink Foreground="#66DFFDFF">详情</Hyperlink>
                </TextBlock>
                <ItemsControl Grid.Row="3" ItemsSource="{Binding PageModel.Logs}" AlternationCount="2">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="28">
                                <Border CornerRadius="14" Background="#11FFFFFF" Name="back" Visibility="Collapsed"/>
                                <Grid TextBlock.FontSize="10" TextBlock.Foreground="White" Name="content">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Num,StringFormat=\{0:00\}}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding DeviceName}" VerticalAlignment="Center" Grid.Column="1"/>
                                    <TextBlock Text="{Binding LogInfo}" VerticalAlignment="Center" Grid.Column="2"/>
                                    <Border Grid.Column="3" Height="26"
                                            CornerRadius="0,13,13,0" Name="typeBack" Margin="0,1,2,1">
                                        <TextBlock Text="{Binding LogType}" Margin="8,0" VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Grid>
                            <DataTemplate.Triggers>
                                <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                    <Setter Property="Visibility" Value="Visible" TargetName="back"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding LogType}" Value="Warn">
                                    <Setter Property="Background" Value="#66FF0000" TargetName="typeBack"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
